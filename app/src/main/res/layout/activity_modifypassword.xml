<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/act_update_password_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:background="#F4F4F4" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d9d9d9" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="13dp"
                android:text="手机号："
                android:textColor="#333333"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/phoneNumbEdit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:focusable="true"
                android:gravity="center_vertical"
                android:hint="请输入手机号"
                android:inputType="number"
                android:paddingLeft="14dp"
                android:textColor="#333333"
                android:textSize="14sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="13dp"
            android:background="#d9d9d9" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="13dp"
                android:text="验证码："
                android:textColor="#333333"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/verifCodeEdit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:focusable="true"
                android:gravity="center_vertical"
                android:hint="请输入验证码"
                android:inputType="number"
                android:paddingLeft="14dp"
                android:textColor="#333333"
                android:textSize="14sp"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="#d9d9d9" />
            <TextView
                android:id="@+id/getVerifyCode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="12dp"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="获取验证码"
                android:textColor="#999999"
                android:textSize="13sp"
                />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="13dp"
            android:background="#d9d9d9" />
        <LinearLayout
            android:id="@+id/act_update_password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="13dp"
                android:text="新密码："
                android:textColor="#333333"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/newPasswordEdit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:focusable="true"
                android:gravity="center_vertical"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:paddingLeft="14dp"
                android:textColor="#333333"
                android:textSize="14sp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="13dp"
            android:background="#d9d9d9" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="13dp"
                android:text="确认密码："
                android:textColor="#333333"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/enSureNewPasswordEdit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:focusable="true"
                android:gravity="center_vertical"
                android:hint="请确认新密码"
                android:inputType="textPassword"
                android:paddingLeft="14dp"
                android:textColor="#333333"
                android:textSize="14sp"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d9d9d9" />
    </LinearLayout>
    <Button
        android:id="@+id/SureBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/act_update_password_main"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/select_confirm_btn_background"
        android:text="确定"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />
</RelativeLayout>